<% layout('/layouts/boilerplate') %>
<h1>All News</h1>
<% newsapps.forEach(function(paper){ %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img src="<%= paper.urlToImage %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= paper.title %></h5>
                    <p class="card-text"><%= paper.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= paper.author %></small>
                    </p>
                    <a href="/newsapp/<%= paper._id %>" class="btn btn-primary">View <%= paper.title %> </a>
                </div>
            </div>
        </div>
    </div>
<% }); %> 
